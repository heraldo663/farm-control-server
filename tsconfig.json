{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src/",
    "baseUrl": "./src/",
    "lib": ["esnext"],
    // "paths": {
    //     "modules/*": ["modules/*"],
    //     // "@config/*": ["config/*"],
    //     // "@shared/*": ["shared/*"],
    //     "utils/*": ["utils/*"]
    // },
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true
  }
}
